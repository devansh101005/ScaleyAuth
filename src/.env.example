# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/auth_db"

# JWT Configuration
# IMPORTANT: Generate strong secrets for production using: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=10m
REFRESH_TOKEN_SECRET=CHANGE_ME_USE_OPENSSL_RAND_BASE64_64
REFRESH_TOKEN_EXPIRES_IN=15d

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3000
NODE_ENV=development

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Frontend URL (for OAuth redirects in production)
FRONTEND_URL=http://localhost:5173
